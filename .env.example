# Database Configuration
DB_USER=chatapp
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_NAME=chatapp

# JWT Configuration
# IMPORTANT: Change JWT_SECRET to a long random string in production (>= 32 chars)
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_USE_LONG_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Frontend Configuration
# For production with nginx proxy, use /api
# For development with separate frontend/backend, use http://localhost:3000
VITE_API_URL=/api

# CORS Configuration
# Comma-separated allowlist of origins in production
# Required when NODE_ENV=production (backend will fail fast if empty)
CORS_ORIGIN=http://localhost,http://127.0.0.1

# TURN Server Configuration
# Used for NAT traversal in WebRTC voice/video calls
# Generate secret with: openssl rand -hex 32
TURN_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32_MIN_64_HEX_CHARS
# TURN_REALM should match your domain in production (e.g., example.com)
TURN_REALM=localhost
# TURN_HOST should be your public IP or domain in production
TURN_HOST=localhost
